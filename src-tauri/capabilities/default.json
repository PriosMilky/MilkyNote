{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Izin akses file MilkyNote",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:allow-read-dir",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-mkdir",
    "fs:allow-write-file",
    "fs:allow-home-write-recursive",
    "fs:allow-desktop-write-recursive",
    "fs:allow-document-write-recursive",
    "dialog:allow-save",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/Documents/Note",
        "$HOME/Documents/Note/*",
        "$HOME/Documents/Note/**"
      ]
    },
    "dialog:default",
    "fs:default"
  ]
}