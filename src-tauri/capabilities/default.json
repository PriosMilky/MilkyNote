{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Izin akses file MilkyNote",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-rename",
    "fs:allow-remove",
    "fs:allow-mkdir",
    "fs:read-all",
    "fs:write-all",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/Documents/Note" },
        { "path": "$HOME/Documents/Note/**" },
        { "path": "/storage/emulated/0/MilkyNote_Sync" },
        { "path": "/storage/emulated/0/MilkyNote_Sync/**" }
      ]
    }
  ]
}