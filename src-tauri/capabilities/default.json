{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Izin akses file MilkyNote",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:app:default",
    "core:window:default",
    "core:event:default",
    "core:path:default",
    "core:webview:default",
    "fs:default",
    "dialog:default",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME/Documents/Note" },
        { "path": "$HOME/Documents/Note/**" },
        { "path": "/storage/emulated/0/MilkyNote_Sync" },
        { "path": "/storage/emulated/0/MilkyNote_Sync/**" }
      ]
    }
  ]
}